<% content_for (:page_title) {school_division.name} %>

<div id="<%= dom_id school_division %>">
  <p class="title">
    <strong>School Division Name:</strong>
    <%= school_division.name %>
  </p>

  <div class="block m-4">
    <p>
      <strong>School Division Wards:</strong>
    </p>
    <ol class="ml-6">
      <% school_division.school_division_wards.each do |sdw| %>
        <li>
          <%= link_to sdw.name, sdw %>
        </li>
      <% end %>
    </ol>
  </div>

</div>
